{
	"name": "exquisite.monster",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --host",
		"build": "NODE_OPTIONS='--max-old-space-size=12288' vite build",
		"preview": "vite preview --host",
		"postinstall": "prisma generate",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest --run --config vitest.config.unit.ts",
		"test:unit:watch": "vitest --config vitest.config.unit.ts",
		"test:integration": "vitest --run --config vitest.config.integration.ts",
		"test:integration:watch": "vitest --config vitest.config.integration.ts",
		"test": "npm run test:unit && npm run test:integration && npm run test:e2e",
		"test:e2e": "playwright test",
		"test:setup": "dotenv -e .env -- npx prisma migrate reset --force && dotenv -e .env -- npm run db:seed",
		"coverage": "vitest run --coverage --config vitest.config.unit.ts && vitest run --coverage --config vitest.config.integration.ts",
		"db:seed": "tsx prisma/seed.ts",
		"db:clear-games": "tsx prisma/clear-games.ts",
		"db:migrate": "prisma migrate dev",
		"db:squash": "rm -rf prisma/migrations && mkdir -p prisma/migrations/000000000000_squashed_migrations && touch prisma/migrations/000000000000_squashed_migrations/migration.sql && pnpm prisma migrate diff --from-empty --to-schema-datamodel ./prisma/schema.prisma --script > ./prisma/migrations/000000000000_squashed_migrations/migration.sql && pnpm exec prisma migrate resolve --applied 000000000000_squashed_migrations",
		"redis:up": "docker compose -f docker-compose.redis.yml up -d",
		"redis:down": "docker compose -f docker-compose.redis.yml down",
		"redis:logs": "docker compose -f docker-compose.redis.yml logs -f redis"
	},
	"devDependencies": {
		"@clerk/testing": "^1.4.25",
		"@eslint/compat": "^1.2.7",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-node": "^5.0.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/howler": "^2.2.11",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^22.13.9",
		"@types/nodemailer": "^6.4.17",
		"@types/rss": "^0.0.32",
		"@vite-pwa/sveltekit": "^1.1.0",
		"autoprefixer": "^10.4.20",
		"dotenv-cli": "^8.0.0",
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"flowbite": "^3.1.2",
		"flowbite-svelte": "^0.47.4",
		"flowbite-svelte-icons": "^2.2.0",
		"globals": "^15.15.0",
		"howler": "^2.2.4",
		"iconify-icon": "^2.3.0",
		"jsdom": "^26.1.0",
		"marked": "^15.0.12",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"prisma": "^6.19.0",
		"supabase": "^2.63.1",
		"svelte": "^5.46.0",
		"svelte-check": "^4.1.4",
		"tailwindcss": "^3.4.17",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.19.3",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0",
		"vite": "^6.4.1",
		"vitest": "^3.2.4",
		"zod": "^4.1.13"
	},
	"dependencies": {
		"@getbrevo/brevo": "^3.0.1",
		"@prisma/client": "^6.19.0",
		"@sentry/sveltekit": "^9.47.1",
		"@supabase/supabase-js": "^2.43.5",
		"@sveltejs/adapter-vercel": "^5.7.2",
		"@types/image-size": "^0.7.0",
		"@zerodevx/svelte-json-view": "^1.0.11",
		"dotenv": "^16.4.7",
		"human-id": "^4.1.1",
		"image-size": "^2.0.2",
		"js-yaml": "^4.1.1",
		"nodemailer": "^7.0.11",
		"pdfjs-dist": "^5.3.31",
		"rss": "^1.2.2",
		"skvetchy": "^2.3.1",
		"svelte-clerk": "^0.18.0",
		"sveltekit-i18n": "^2.4.2",
		"sveltekit-superforms": "^2.28.1",
		"unzipit": "^1.4.3",
		"winston": "^3.17.0"
	},
	"overrides": {
		"cookie": "^0.7.0",
		"tough-cookie": "^4.1.3",
		"axios": "^1.13.2",
		"glob": "^10.5.0",
		"valibot": "^1.2.0"
	},
	"optionalDependencies": {
		"@esbuild/linux-arm64": "^0.25.12",
		"@esbuild/linux-x64": "^0.25.12",
		"@rollup/rollup-linux-arm64-gnu": "^4.53.3",
		"@rollup/rollup-linux-x64-gnu": "^4.53.3"
	}
}
